<% title 'Verify' %>

<h1 class="title has-text-info">Verify</h1>

<p id="notice"><%= notice %></p>

<%= form_tag(verify_url) do %>
  <div class="field">
    <%= label_tag :verification_code %>
    <div class="control">
      <%= text_field_tag :verification_code %>
    </div>
  </div>

  <div class="actions control">
    <%= submit_tag 'Verify', class: "button is-link is-light" %>
  </div>
<% end %>


<%= link_to 'Back', users_path, class: "button is-link is-light" %>
